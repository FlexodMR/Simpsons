//        $attrs = $mat + ".color";
//        shadingConnection -e -cs on $attrs; 
//    }
}

global proc backfaceOff()
{
    string $objects[] = `ls -sl -dag -s`;
    print ("\n");
    print $objects;
    for($object in $objects)
    {
        setAttr ( $object + ".opposite") 0; 
    }
}



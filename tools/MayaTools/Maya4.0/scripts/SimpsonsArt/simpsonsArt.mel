global proc litOff() 
{
    string $mats[] = `ls -type pure3dSimpleShader`;
    for($mat in $mats)
    {
        $attr = $mat + ".dynamicallyLit";
      setAttr $attr 0;
        $attrs = $mat + ".color";
        shadingConnection -e -cs on $attrs;
        FixHWTextureInfo( $mat );
    }

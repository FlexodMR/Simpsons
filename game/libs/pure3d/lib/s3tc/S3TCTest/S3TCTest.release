S3TCTest : Compress.o DDSFile.o Endian.o MemAlloc.o S3TCTest.o
	gcc -o S3TCTest Compress.o DDSFile.o Endian.o MemAlloc.o S3TCTest.o -lS3TC -L./

Compress.o : Compress.c
	gcc -c -w Compress.c

DDSFile.o : DDSFile.c
	gcc -c -w DDSFile.c

Endian.o : Endian.c
	gcc -c -w Endian.c

MemAlloc.o : MemAlloc.c
	gcc -c -w MemAlloc.c

S3TCTest.o : S3TCTest.c
	gcc -c -w S3TCTest.c

.PHONY : clean

clean :
	rm -f *.o S3TCTest